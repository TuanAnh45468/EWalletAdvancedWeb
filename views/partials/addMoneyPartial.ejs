<body>

  <main class="form-signin w-100 m-auto row" style="max-width: 70%;padding: 15px;">

    <div class="col-7">
      <form>
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary"> Add Money Page</span>
        </h4>
        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="enter-money" placeholder="00000">
          <label for="enter-money">Enter Money</label>
        </div>

        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="card-number" placeholder="40000">
          <label for="card-number">Card Number</label>
        </div>

        <div class="form-floating mb-3">
          <input type="date" class="form-control" id="expiry" placeholder="40000">
          <label for="expiry">Expiry</label>
        </div>

        <div class="form-floating mb-3">
          <input type="number" class="form-control" id="cvv" placeholder="40000">
          <label for="cvv">CVV/CVC</label>
        </div>

        <div class="form-floating mb-3">
          <textarea class="form-control" placeholder="Note" id="note" style="height: 100px"></textarea>
          <label for="note">Note</label>
        </div>

        <div class="form-check mb-3 mr-5">
          <div class="btn btn-primary mb-3 mr-auto">
            <span class="ps-20">Payment</span>
            <span class="fas fa-arrow-right"></span>
          </div>
        </div>
      </form>
    </div>
  </main>

  
</body>